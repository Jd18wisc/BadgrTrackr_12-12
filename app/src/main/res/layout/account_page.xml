<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="My Account"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:id="@+id/account_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Account Information"
        android:textColor="@color/darkgray"
        android:textSize="18dp"
        android:paddingBottom="12dp"
        android:id="@+id/account_subheader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="user"
        android:textColor="@color/uw_red"
        android:textSize="14dp"
        android:paddingBottom="12dp"
        android:id="@+id/user_name" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textColor="@color/uw_red"
            android:textSize="14dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center"
            android:id="@+id/email_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location History:"
            android:textColor="@color/uw_red"
            android:textSize="14dp"
            android:paddingBottom="12dp"
            android:id="@+id/switch_label" />
            <Switch
                android:id="@+id/LocationHistorySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/uw_red"
            android:layout_gravity="center"
            android:text="Change Password"
            android:textSize="8dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/LocationHistoryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/uw_red"
        android:text="Location History"
        android:textAlignment="center"
        android:textColor="#F5F6F5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/FavoriteVisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Favorite Location:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/favLocView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Favorite"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/loc_item"/>

    <TextView
        android:id="@+id/CommonlyVisited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Commonly Visited:"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        />

    <TextView
        android:id="@+id/common1"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Rheta's Market"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/loc_item"/>

    <TextView
        android:id="@+id/common2"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Nicholas Recreation Center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:padding="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/loc_item"/>

</LinearLayout>
</ScrollView>